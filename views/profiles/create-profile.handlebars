<section>
    <article>
        <h2 class="text-uppercase font-weight-bold text-success">Create Profile</h2>
        <form action="" method="post">
            <div class="row">
                <div class="col-md-4">
                    <label for="firstname">firstname</label>
                    <input 
                    type="text" 
                    name="firstname" 
                    class="form-control"
                    id="firstname"
                    placeholder="enter firstname">
                </div>
                <div class="col-md-4">
                    <label for="lastname">lastname</label>
                    <input 
                    type="text" 
                    name="lastname" 
                    class="form-control"
                    id="lastname"
                    placeholder="enter lastname">
                </div>
                <div class="col-md-4">
                     <label for="email">email</label>
                    <input 
                    type="email" 
                    name="email" 
                    class="form-control"
                    id="email"
                    placeholder="enter email">
                </div>
                <div class="col-md-4">
                    <label for="phonenumber">phonenumber</label>
                    <input 
                    type="text" 
                    name="phonenumber" 
                    class="form-control"
                    id="phonenumber"
                    placeholder="enter phonenumber">
                </div>
                <div class="col-md-4">
                    <button class="btn btn-success form-control">submit</button>
                </div>
            </div>
        </form>
    </article>
</section>